{
  "manifest_version": 2,
  "name": "List Filter",
  "version": "1.0",
  "description": "Customize filters for itemized lists.",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}